<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal|center_vertical"
            android:paddingTop="15dp"
            android:paddingBottom="15dp">

        <Button
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="@string/recyclerview"
                android:textColor="#fff"
                android:id="@+id/btnRecyclerView"
                android:background="@drawable/button_shape"
                android:layout_marginBottom="5dp"
        />

        <Button
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="@string/searchview"
                android:id="@+id/btnSearchView"
                android:textColor="#fff"
                android:background="@drawable/button_shape"
                android:layout_marginBottom="5dp"
        />

        <Button
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="@string/searchview_with_filter"
                android:id="@+id/btnSearchViewWithFilter"
                android:textColor="#fff"
                android:background="@drawable/button_shape"
                android:layout_marginBottom="5dp"
        />

        <Button
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="@string/date_picker"
                android:id="@+id/btnDatePicker"
                android:textColor="#fff"
                android:background="@drawable/button_shape"
                android:layout_marginBottom="5dp"
        />

        <Button
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="@string/validation"
                android:id="@+id/btnValidation"
                android:textColor="#fff"
                android:background="@drawable/button_shape"
                android:layout_marginBottom="5dp"
        />

        <Button
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="@string/custom_dialog"
                android:id="@+id/btnCustomDialog"
                android:textColor="#fff"
                android:background="@drawable/button_shape"
                android:layout_marginBottom="5dp"
        />

        <Button
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="@string/cardslider"
                android:id="@+id/btnCardSlider"
                android:textColor="#fff"
                android:background="@drawable/button_shape"
                android:layout_marginBottom="5dp"
                />

        <Button
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="@string/draw"
                android:id="@+id/btnDraw"
                android:textColor="#fff"
                android:background="@drawable/button_shape"
                android:layout_marginBottom="5dp"
                />

        <Button
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="@string/line_graph"
                android:id="@+id/btnLineGraph"
                android:textColor="#fff"
                android:background="@drawable/button_shape"
                android:layout_marginBottom="5dp"
                />

        <Button
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="@string/http_url_connection"
                android:id="@+id/btnHttpUrlConnection"
                android:textColor="#fff"
                android:background="@drawable/button_shape"
                android:layout_marginBottom="5dp"
                />
    </LinearLayout>
</ScrollView>